<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.paymentScreenController">

   <children>

      <!-- Back Button -->
      <Button fx:id="backButton" text="Back" onAction="#goBack" />

      <!-- Table to Display Selected Invoices -->
      <TableView fx:id="invoiceTable" prefHeight="200.0" prefWidth="580.0">
         <columns>
            <TableColumn fx:id="invoiceIdColumn" text="Invoice ID" prefWidth="100.0">
               <cellValueFactory><PropertyValueFactory property="invoiceId"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" text="Email (Paid To)" prefWidth="180.0">
               <cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="subtotalColumn" text="Subtotal" prefWidth="100.0">
               <cellValueFactory><PropertyValueFactory property="subtotal"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="taxColumn" text="Tax" prefWidth="80.0">
               <cellValueFactory><PropertyValueFactory property="tax"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="totalColumn" text="Total Amount" prefWidth="120.0">
               <cellValueFactory><PropertyValueFactory property="totalAmount"/></cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>

      <!-- Payment Summary -->
      <AnchorPane prefHeight="100.0" prefWidth="600.0">
         <children>
            <Label layoutX="65.0" layoutY="30.0" text="Total to Pay:"/>
            <TextField fx:id="totalAmountField" layoutX="150.0" layoutY="25.0" editable="false"/>
         </children>
      </AnchorPane>

      <!-- Payment Method Selection -->
      <AnchorPane prefHeight="150.0" prefWidth="600.0">
         <children>
            <Label layoutX="230.0" layoutY="20.0" text="Select Payment Option"/>
            <Button fx:id="paypalButton" layoutX="80.0" layoutY="60.0" prefHeight="50.0" prefWidth="100.0" text="PayPal" onAction="#payWithPayPal"/>
            <Button fx:id="creditCardButton" layoutX="250.0" layoutY="60.0" prefHeight="50.0" prefWidth="100.0" text="Credit Card" onAction="#payWithCreditCard"/>
            <Button fx:id="chequeButton" layoutX="420.0" layoutY="60.0" prefHeight="50.0" prefWidth="100.0" text="Cheque" onAction="#payWithCheque"/>
         </children>
      </AnchorPane>

   </children>
</VBox>
